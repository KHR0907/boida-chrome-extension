{
  "name": "Boida 수화 번역",
  "description": "음성 데이터를 기반으로 수어 아바타를 생성해주는 크롬 확장 프로그램입니다.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/contentScript.js"],
      "css": ["css/style.css"]
    }
  ],
  "action": {
    "default_title": "Translate MP4 to sign language",
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "/images/smile_16.png",
      "32": "/images/smile_32.png",
      "48": "/images/smile_48.png",
      "128": "/images/smile_128.png"
    }
  },
  "icons": {
    "16": "/images/smile_16.png",
    "32": "/images/smile_32.png",
    "48": "/images/smile_48.png",
    "128": "/images/smile_128.png"
  }
}
